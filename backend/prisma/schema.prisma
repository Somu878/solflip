generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Bet {
  id             Int      @id @default(autoincrement())
  signature      String   @unique
  playerPublicKey String
  amount         Float
  choice         String
  result         String
  won            Boolean
  payoutSignature String?
  createdAt      DateTime @default(now())
}




    

